<view class="page" bindtouchend='touchend' bindtouchstart='touchstart'>

  <!-- 侧滑栏 -->
  <view class="page_tab" >
    <view class="page_tab_content">
      <view class="userinfo">
        <button wx:if="{{!hasUserInfo && canIUse}}" open-type="getUserInfo" bindgetuserinfo="getUserInfo" style='left:-60px;top:40px'> 获取头像昵称 </button>
        <block wx:else>
          <image bindtap="bindViewTap" class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
        </block>
        <text class="userinfo-nickname">{{userInfo.nickName}}</text>
      </view>
      <view class='bgbody'>
        <button class='btn' style='height:70px;width:280px;position:absolute;top:155px;background-color:#ffff;opacity:0.7;'bindtap='GoHome'>
        <icon class='iconfont iconyingyong_zhengchang'> <text style='font-size:20px;padding-left:20px;'>主页</text></icon>
        </button>
        <button class='btn' style='height:70px;width:280px;position:absolute;top:230px;background-color:#ffff;opacity:0.7;'bindtap='GoAdd'>
        <icon class='iconfont iconxinzeng'> <text style='font-size:20px;padding-left:20px;'>添加</text></icon>
        </button>
        <button class='btn' style='height:70px;width:280px;position:absolute;top:305px;background-color:#ffff;opacity:0.7;'bindtap='GoContributor'>
        <icon class='iconfont iconheadlines'> <text style='font-size:20px;padding-left:20px;'>关于</text></icon>
        </button>
        <button class='btn' style='height:70px;width:280px;position:absolute;top:380px;background-color:#ffff;opacity:0.6;'open-type='share'>
        <icon class='iconfont iconfenxiang'> <text style='font-size:20px;padding-left:20px;'>分享</text></icon>
        </button>
      </view>
    </view>
  </view>

  <!--遮罩层-->
  <view class="bg" bindtap='hideview' style='display:{{display}}'></view>

  <!-- 主页 -->
  <view class="home" style="{{translate}};background-color:{{bgColor}}">
   <view style='height:22px;'></view>
    <view class='top'>
    <icon class='iconfont iconother' style='font-size:50px;postion:absolute;top:13px;left:2rpx;' bindtouchend='showview'></icon>
 <!--image bindtouchend='showview' class='icon_user' src='../../resourse/other.png'></image-->
      <text class='txt'>纪念日</text>
    </view>
    
      <scroll-view class='card_container' scroll-y='{{isScroll}}'>
        <navigator url='../detail/detail?id={{item._id}}' wx:key="items" wx:for="{{data}}">
          <view data-index='{{index}}' class="order_item" bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}rpx;opacity:{{item.opacity_value}};background:white url('/image/img.jpg') no-repeat;background-size: cover;" id="viewx" >
            <view><text class='tittle'>距离{{item.title}}还有{{item.day}}天</text></view><!--t-title ,c-content,d-date-->            
            <view>
              <text wx:if='{{item.content.length<20}}'>{{item.content}}</text>
              <text wx:else>{{item.absContent}}...</text>
            </view>
            <view style='padding-top:40rpx'><text>{{item.date}}</text></view>

          </view>
        </navigator>
        
      </scroll-view>
        <image class="plus-button" src="/image/plus.png" bindtap="addpage"></image>
  </view>

</view>