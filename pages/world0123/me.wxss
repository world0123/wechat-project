/* pages/home/home.wxss */
.page{  
  height: 100%;
  width: 100%;
  background-color: #f8f8f9;
}  
/* 主页 */  
.home {  
  position: absolute;  
  width: 750rpx;  
  height: 100%;  
  z-index: 1;  
  transition: All 0.4s ease;  
  -webkit-transition: All 0.4s ease;  
  background-color: #fffdfa
}  
.icon_user{
  height: 40px;
  width: 40px;
  position: relative;
  top: 3px;
  left: 3px;
}
.top{
  background-color: rgb(255, 253, 253);
  height: 7%;
  border-bottom: 1px solid rgb(194, 194, 194);
}
.txt{
  position: relative;
  left: 120px;
  top: -10px;  
  color:rgb(92, 92, 92);
}


/* 遮罩层 */  
.bg {    
  display: none;    
  position: fixed;    
  top: 0%;    
  left: 70%;    
  width: 100%;    
  height: 100%;    
  background-color: rgb(31, 30, 30);    
  z-index: 1001;    
  -moz-opacity: 0.7;    
  opacity: 0.70;    
  transition:width 2s;  
  filter: alpha(opacity=70);    
}   

 /* 侧滑栏 */  
.page_tab {  
  height: 100%;  
  width: 750rpx;  
  position: fixed;  
  z-index: 0; 
}  
  
.page_tab_content .wc {  
  color: #000;  
  position: relative;  
  font-size: 32rpx;  
  padding: 20rpx 0 30rpx 20rpx; 
}  
.userinfo {
  display: flex;
  flex-direction: column;
  height: 150px;
  position: relative;
  background: linear-gradient(75deg, #5c82ff, #faba42);
}
.userinfo::after{
  content: '';
  position: absolute;
  background: inherit;
  top: 0.5rem;
  filter: blur(0.4rem);
  opacity: 0.7;
  z-index: -1;
}

.userinfo-avatar {
  width: 140rpx;
  height: 140rpx;
  margin: 20rpx;
  border-radius: 50%;
  position: absolute;
  left: 80px;top: 10px;
}
.userinfo-nickname {
  color: #495060;
  position:absolute;
  left: 105px;top: 95px;
}
.plus-button{
  width: 125rpx;
  height: 125rpx;
  position: absolute;
  bottom:10rpx;
  right: 37.5rpx;
  box-shadow: 10rpx 10rpx 10rpx #c5c5c5;
  border-radius:100%; 
}


.order_item{
  border-radius:35rpx; 
  height: 300rpx;
  position: relative;
  margin: 24rpx 37.5rpx;
  box-shadow: -5rpx 5rpx 10rpx #d6d6d6;
}

.order_item view{
  width: 70%;
  margin: 15rpx 15% ;
  text-align: center;
}
.title{
  font-weight: bold;
  margin-top: 20rpx;
}

/*去掉滚动条*/
::-webkit-scrollbar{
width: 0;
height: 0;
color: transparent;
}
.wc{  
  color: #000;  
  height: 30px;
  margin-top: 0px;
}  
.pagetxt{
  position: absolute;
  height: 20px;
  font-size: 32rpx; 
}
.pageimg{
  display: inline-block;  
  height: 60rpx;  
  width: 60rpx;  
  margin-right: 40rpx; 
  margin-left: 80rpx;
}