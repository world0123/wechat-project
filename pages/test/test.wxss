.card{
  border-radius:20rpx;    
  position: absolute;
  right: 0;
  left: 0;
  margin: auto;
  width: 90%;
  height: 700rpx;
  background-color: #faf; 
}
.img{
  border-top-left-radius:20rpx;
  border-top-right-radius:20rpx;  
  width: 100%;
  height: 80%;
}
.content_title{
  width: 100%;
  padding: 20rpx 10rpx;
}
.content_date{
  width: 100%;
  padding: 20rpx 10rpx;
}
.img text,.img icon{
  color: white;
}