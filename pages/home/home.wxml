<!--pages/home/home.wxml-->
<view class="container">
  <scroll-view class='card_container' scroll-y='{{isScroll}}'>
      <block wx:key="item" wx:for="{{data}}">
    <view data-index='{{index}}' class="order_item" bindtouchstart="drawStart" bindtouchmove="drawMove" bindtouchend="drawEnd" style="right:{{item.right}}rpx;opacity:{{item.opacity_value}}" >
          <text class='tittle'>{{item.t}}</text><!--t-title ,c-content,d-date-->
          <text class='resume'>{{item.c}}</text>
          <text class='date'>{{item.d}}</text>
    </view>
    </block>
  </scroll-view>
  <image class="plus-button" src="/image/plus-circle.png" bindtap="addpage"></image>
</view>